{
    "name": "@something/core",
    "description": "A lightweight, esm-first reactive frontend library.",
    "license": "MIT",
    "version": "2.0.0-beta1",
    "main": "./src/main.js",
    "type": "module",
    "files": [
        "src/main.js",
        "src/lib/**/*",
        "package.json",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "test": "vitest",
        "coverage": "vitest --coverage",
        "typecheck": "tsc",
        "doc": "tsdoc --src=src/lib/* --dest=docs/api.md --noemoji --types",
        "bundle:js": "esbuild --bundle --minify --format=esm --outfile=dist/something.js src/main.js",
        "bundle:dts": "dts-bundle-generator -o dist/something.d.ts src/main.js",
        "jsr:manifest": "nix-shell -p jq --run \"jq '{ name, license, version, exports: .main, include: .files }' package.json > jsr.json\"",
        "jsr:publish": "nix-shell -p deno --run \"deno publish --unstable-sloppy-imports --no-check\""
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Aworldc/Something.git"
    },
    "devDependencies": {
        "@vitest/coverage-istanbul": "3.0.9",
        "@vitest/coverage-v8": "3.0.9",
        "jsdom": "26.0.0",
        "vitest": "3.0.9",
        "typescript": "^5.8.3",
        "esbuild": "^0.27.2",
        "dts-bundle-generator": "^9.5.1",
        "tsdoc-markdown": "^1.4.1"
    },
    "prettier": {
        "experimentalTernaries": false,
        "experimentalOperatorPosition": "start",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true,
        "trailingComma": "none",
        "objectWrap": "collapse",
        "arrowParens": "avoid",
        "proseWrap": "always"
    }
}
